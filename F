<body>
    <div class="container">
        <h1>Smart Bot | تحليل فوري</h1>

        <div class="settings-section">
            <h3>⚙️ إعدادات الإشارة</h3>
            
            <div class="setting-group">
                <label for="instrument">السوق/المؤشر:</label>
                <select id="instrument">
                    <option value="Smarty">Smarty</option>
                    <option value="CamelRaceIndex">Camel Race Index</option>
                    <option value="CricketIndex">Cricket Index</option>
                    <option value="LuxuryIndex">Luxury Index</option>
                    <option value="FootballIndex">Football Index</option>
                    <option value="AlIndex">Al Index</option>
                </select>
            </div>

            <div class="setting-group">
                <label for="timeframe">الإطار الزمني:</label>
                <select id="timeframe">
                    <option value="5s">5 ثواني</option>
                    <option value="30s">30 ثانية</option>
                    <option value="1m">1 دقيقة</option>
                </select>
            </div>

            <button class="signal-button" onclick="getSignal()">
                الحصول على الإشارة الآن
            </button>
        </div>
        
        <div class="signal-output">
            <h3>📈 نتيجة التحليل</h3>
            <p id="signalMessage">اضغط "الحصول على الإشارة" لتشغيل البوت.</p>
            <div id="signalResult" class="result">...</div>
        </div>
    </div>

    <script>
        function getSignal() {
            const instrument = document.getElementById('instrument').value;
            const timeframe = document.getElementById('timeframe').value;
            const signalMessage = document.getElementById('signalMessage');
            const signalResult = document.getElementById('signalResult');

            // 1. عرض حالة "جاري التحليل"
            signalMessage.textContent = `يتم تحليل سوق ${instrument} على إطار ${timeframe}...`;
            signalResult.textContent = '⏳';
            signalResult.style.color = '#FF9800'; // برتقالي

            // 2. محاكاة عملية التحليل (انتظار 3 ثوانٍ)
            setTimeout(() => {
                const isBuy = Math.random() > 0.5; 
                
                if (isBuy) {
                    signalResult.textContent = 'شراء ⬆️';
                    signalMessage.textContent = '✅ **توصية قوية بالشراء!**';
                    signalResult.style.color = '#4CAF50'; // أخضر
                } else {
                    signalResult.textContent = 'بيع ⬇️';
                    signalMessage.textContent = '❌ **توصية قوية بالبيع!**';
                    signalResult.style.color = '#F44336'; // أحمر
                }
            }, 3000); 
        }
    </script>
